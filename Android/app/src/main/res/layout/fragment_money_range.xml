<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="label"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoneyRangeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_4.44"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0444"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clo_day_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/airbnb_offWhite">

            <TextView
                android:id="@+id/tv_money_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.28"
                app:layout_constraintWidth_percent="0.6"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/money_label"/>

            <TextView
                android:id="@+id/tv_money_range"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_money_label"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintWidth_percent="0.6"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{label}"
                tools:text="₩52,662 - ₩1,000,000+"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/empty_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clo_day_label"
            app:layout_constraintDimensionRatio="360:12"/>

        <TextView
            android:id="@+id/tv_description_price_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/empty_view_1"
            app:layout_constraintStart_toStartOf="@id/gl_v_4.44"
            tools:text="평균 1박 요금은 ₩128,912 입니다."
            style="@style/Text_Grey3.12"/>

        <View
            android:id="@+id/empty_view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description_price_average"
            app:layout_constraintDimensionRatio="360:50"/>

        <com.stfalcon.pricerangebar.RangeBarWithChart
            android:id="@+id/rangeBarWithChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/empty_view_2"/>

        <View
            android:id="@+id/empty_view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rangeBarWithChart"
            app:layout_constraintDimensionRatio="360:40"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_leftpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/empty_view_3"
            app:layout_constraintWidth_percent="0.9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_leftpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="최저 요금"
                android:textColor="#333333"
                android:textColorHint="#4F4F4F" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_rightpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_leftpin"
            app:layout_constraintWidth_percent="0.9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_rightpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="최고 요금"
                android:textColor="#333333"
                android:textColorHint="#4F4F4F" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>