<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.team16.airbnb.data.model.DetailBookData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mybook.detail.DetailMyBookFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/lo_appbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/airbnb_offWhite"
                app:title="예약"
                app:navigationIcon="@drawable/ic_back" />

        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:id="@+id/top_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_appbar"
            app:layout_constraintHeight_percent="0.02" />

        <ImageView
            android:id="@+id/iv_room_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/top_margin"
            app:layout_constraintDimensionRatio="328:150"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.9"
            imageUrl="@{item.imageUrl}"
            tools:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_room_image"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            address="@{item.address[0]}"
            tools:text="서초, 서울, 한국"/>

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{item.roomName}"
            tools:text="Spacious and Comfortable cozy house #4"/>

        <View
            android:id="@+id/line_first"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/airbnb_Grey3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_room_name" />

        <TextView
            android:id="@+id/tv_check_in_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_first"
            android:gravity="bottom"
            android:text="@string/check_in_label" />

        <TextView
            android:id="@+id/tv_check_in_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_in_label"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:textSize="17sp"
            android:text="@{item.checkIn}"
            tools:text="2022-11-05"/>

        <TextView
            android:id="@+id/tv_check_out_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_in_date"
            android:gravity="bottom"
            tools:text="체크아웃"/>

        <TextView
            android:id="@+id/tv_check_out_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_out_label"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="@{item.checkOut}"
            tools:text="2022-11-20"/>

        <View
            android:id="@+id/line_second"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/airbnb_Grey3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_out_date" />

        <TextView
            android:id="@+id/tv_info_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_second"
            android:gravity="bottom"
            tools:text="간략 정보"/>

        <TextView
            android:id="@+id/tv_host_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_label"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:textSize="17sp"
            hostName="@{item.roomInfo[0].host}"
            tools:text="호스트: jong님"/>

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_host_name"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:textSize="17sp"
            roomType="@{item.roomInfo[0].roomType}"
            person="@{item.roomInfo[0].totalGuest}"
            tools:text="집전체∙게스트 3명"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_person_info"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="17sp"
            moneyFormat="@{item.roomInfo[0].reservationPrice}"
            tools:text="₩1,488,195"/>

        <Button
            android:id="@+id/btn_cancel_book"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintTop_toBottomOf="@id/tv_total_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/book_cancel_button"
            android:text="@string/book_cancel_label"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>